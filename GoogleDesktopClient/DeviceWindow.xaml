<Window x:Class="GoogleApiDesktopClient.DeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeviceWindow" Height="231" Width="360">
    <StackPanel Orientation="Vertical">
        <Label Content="Please open a web browser and navigate to" HorizontalAlignment="Center"/>
        <TextBox x:Name="link" Height="30" TextWrapping="Wrap" Text="TextBox" FontSize="16" HorizontalAlignment="Center" BorderThickness="0"/>
        <Label Content="When prompted, please enter the code" HorizontalAlignment="Center"/>
        <TextBox x:Name="code" Height="33" TextWrapping="Wrap" Text="TextBox" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" BorderThickness="0"/>
    </StackPanel>
</Window>
